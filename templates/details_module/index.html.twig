{% extends 'base.html.twig' %}

{% block title %}Module {{module.id}}{% endblock %}

{% block body %}
<div class="container">

	<h1 class="text-center m-3">{{ module.nommodule }}</h1>
	<div class="d-flex gap-3 justify-content-around m-5">
		<div class="text1 d-flex justify-content-center align-items-center">
			<p>{{module.descriptionmodule}}</p>
		</div>
		<div class="videoo d-flex justify-content-center align-items-center">
			{% if module.contenus[0] is defined %}
			<p>{{module.contenus[0].nomfichier}}</p>
			{% endif %}
		</div>
	</div>	

</div>
{% endblock %}
