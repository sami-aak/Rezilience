{% extends 'base.html.twig' %}

{% block title %}Liste des modules{% endblock %}

{% block body %}
    <div class="container">   
        <div class="row gap-5 justify-content-center m-5">
    {% for module in modules %}
            <div class="card col-3 ">
            <img class="card-img-top" src="..." alt="">
                <div class="card-body text-center">
                    <h4>Module {{ module.id }}</h4>
                    <h5 class="card-title">{{ module.nommodule }}</h5>
                    <p class="card-text">{{ module.descriptionmodule }}</p>
                    <a href="{{path('app_details_module_id', {id: module.id})}}" class="btn btn-primary">Acc√©der</a>
                </div>
            </div>
    {% endfor %}
        </div> 
    </div>    
{% endblock %}
